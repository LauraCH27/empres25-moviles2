<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SesionFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Secondary_Light"
        android:fontFamily="sans-serif-medium"
        android:text="Inicio Sesión"
        android:textAlignment="viewStart"
        android:textColor="#E4DFDF"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_loginfra" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@color/Primary_Light"
            android:gravity="center_horizontal"
            android:text="Correo Electronico"
            android:textColor="#10100F"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etcorreo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:hint="p.e. micorreo@gmail.com"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/Primary_Light"
            android:gravity="center_horizontal"
            android:text="Contraseña"
            android:textColor="#10100F"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etclave"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btingresar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/Primary_Dark2"
            android:text="Ingresar"
            android:textColor="#DFDADA"
            android:textSize="20sp"
            app:cornerRadius="200dp" />

        <TextView
            android:id="@+id/tvregistrar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Haz clic AQUI para Registrarse!"
            android:textColor="#2196F3"
            android:textColorHighlight="#2196F3"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>

